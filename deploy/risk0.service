[Unit]
Description=Risk0 Bot Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/risk0-bot
ExecStart=/root/risk0-bot/vps_monitor.sh monitor
ExecStop=/root/risk0-bot/vps_monitor.sh stop
Restart=always
RestartSec=10
StandardOutput=append:/var/log/risk0/service.log
StandardError=append:/var/log/risk0/service.log

# Environment
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
